<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">





    <ImageView
        android:id="@+id/product_cart_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="14dp"
        android:minHeight="120dp"
        android:minWidth="120dp"
        android:maxHeight="140dp"
        android:maxWidth="140dp"
        android:layout_marginTop="14dp"
        android:layout_marginStart="14dp"
        android:scaleType="fitXY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/cart_title_tv"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="@id/product_cart_iv"
        app:layout_constraintStart_toEndOf="@id/product_cart_iv"
        app:layout_constraintEnd_toEndOf="parent"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="#000"
        android:textSize="20sp"
        android:textAlignment="viewStart"
        android:textStyle="bold"
        android:text="Ahmedd"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="14dp"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/cart_detail_tv"
            app:layout_constraintStart_toStartOf="@id/cart_title_tv"
            app:layout_constraintEnd_toEndOf="@id/cart_title_tv"
            app:layout_constraintTop_toBottomOf="@id/cart_title_tv"
            android:layout_marginTop="8dp"
            android:text="waledd"
            android:textAlignment="viewStart"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="#000"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/price_cart_tv"
        app:layout_constraintStart_toStartOf="@id/cart_title_tv"
        app:layout_constraintTop_toBottomOf="@id/cart_detail_tv"
        android:layout_marginTop="16dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="#DC1313"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageButton
        android:id="@+id/dec_ib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
            android:background="@drawable/ic_mm"
        android:minWidth="30dp"
        android:minHeight="30dp"
        app:layout_constraintBottom_toBottomOf="@id/quantity_tv"

        app:layout_constraintEnd_toStartOf="@id/quantity_tv"
        app:layout_constraintTop_toTopOf="@id/quantity_tv" />

    <TextView
        android:id="@+id/quantity_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@android:drawable/editbox_background_normal"
        android:ems="2"
        android:gravity="center"
        android:maxLines="1"
        android:text="1"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/price_cart_tv"
        app:layout_constraintEnd_toStartOf="@id/inc_ib"
        app:layout_constraintTop_toTopOf="@id/price_cart_tv" />

    <ImageButton
        android:id="@+id/inc_ib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:background="@drawable/ic_24"
        android:minWidth="30dp"
        android:minHeight="30dp"
        app:layout_constraintBottom_toBottomOf="@id/quantity_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/quantity_tv" />


</androidx.constraintlayout.widget.ConstraintLayout>